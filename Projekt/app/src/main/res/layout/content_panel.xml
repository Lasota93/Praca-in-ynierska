<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tobiasz.projekt.panel"
    tools:showIn="@layout/app_bar_panel">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/cofnij"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cofnij"
            android:id="@+id/btnmenu1"
            android:layout_weight="1" />
        <Button
            android:text="@string/zapisz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zapis"
            android:id="@+id/btnmenu2"
            android:layout_weight="1" />
        <Button
            android:text="@string/title_activity_lista_filtrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnmenu3"
            android:onClick="lista"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
