<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tobiasz.projekt.ustawienia"
    tools:showIn="@layout/activity_ustawienia">

    <TextView
        android:text="Czy chcesz, aby aplikacja przetwarzała nieprzeskalowane zdjęcie ?\nTo może znacznie zwolnić jej działanie !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="101dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:gravity="center"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="OFF/ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="43dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_below="@+id/switch2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
